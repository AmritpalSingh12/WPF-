<Window x:Class="WPF_Ass.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Ass"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl_Title" Content="Delete Item " HorizontalAlignment="Left" Margin="289,32,0,0" VerticalAlignment="Top" Width="185" FontWeight="Bold"/>
        <Label Content="Enter ID:" HorizontalAlignment="Left" Margin="79,89,0,0" VerticalAlignment="Top" Width="147"/>
        <TextBox x:Name="txt_IDDelete" HorizontalAlignment="Left" Margin="262,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDelete" Content="Delete Item" HorizontalAlignment="Left" Margin="186,165,0,0" VerticalAlignment="Top" Width="136" Click="Deleteitem_Click"/>
        <Label x:Name="lblMSGdeleted" Content="" HorizontalAlignment="Left" Margin="216,0,0,0" VerticalAlignment="Center" Width="141" Foreground="#FFF11515" FontWeight="Bold"/>

    </Grid>
</Window>
